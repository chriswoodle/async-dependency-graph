{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "target": "es5",
        "module": "commonjs",
        "inlineSourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "pretty": true,
        "lib": [
            "es7"
        ]
    },
    "exclude": [
        "./example",
        "./dist",
        "**/*.spec.ts"
    ],
    "typedocOptions": {
        "out": "docs",
        "exclude": "./node_modules/**,./examples/**/*.ts",
        "excludePrivate": true
    }
}